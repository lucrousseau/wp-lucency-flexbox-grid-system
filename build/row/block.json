{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "lucency-grid/row",
  "version": "1.0.0",
  "title": "Row",
  "category": "design",
  "description": "Create a flex row and columns with responsive sizes.",
  "example": {},
  "supports": {
    "html": true
  },
  "textdomain": "lucency",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "viewScript": "file:./view.js",
  "attributes": {
    "tag": {
      "type": "string",
      "default": "div"
    },
    "columns": {
      "type": "number",
      "default": 2
    },
    "stylesClasses": {
      "type": "object",
      "default": {
        "full": {
          "classes": {
            "display": "lucency-flex",
            "flex-direction": "lucency-flex-row",
            "flex-wrap": "lucency-flex-wrap"
          },
          "variables": {
            "gap": "1"
          }
        }
      }
    }
  }
}